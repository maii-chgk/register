[Unit]
Description=Puma HTTP Server
After=network.target

[Service]
Type=notify

WatchdogSec=10

User=deploy

WorkingDirectory=/home/deploy/register

ExecStart=RAILS_ENV=production /home/deploy/.rvm/gems/ruby-3.0.1/bin/puma -C /home/deploy/register/config/puma.rb /home/deploy/register/config.ru

Restart=always

[Install]
WantedBy=multi-user.target